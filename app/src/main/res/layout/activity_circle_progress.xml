<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lqr.customerview.widget.CircleProgressView
        android:id="@+id/cpv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:progress_begin_location="right"
        app:progress_paint_color="@color/DeepPink"
        app:progress_paint_width="10dp"
        app:progress_text_color="@android:color/black"
        app:progress_text_size="20sp"/>

</RelativeLayout>